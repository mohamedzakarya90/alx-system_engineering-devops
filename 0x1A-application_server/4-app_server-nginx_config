# Configuring Nginx to serve the AirBnB_clone_v3 API

server {
    # Listening on port 80
    listen      80 default_server;
    listen      [::]:80 default_server ipv6only=on;

    # Using server IP as domain name
    server_name 104.196.168.90;

    # Customizing  the HTTP response header
    add_header  X-Served-By 375-web-01;

    # Serving (airbnb-onepage) route on AirBnB_clone_v3
    location = /airbnb-onepage/ {
        proxy_pass http://127.0.0.1:5000/airbnb-onepage/;
    }

    # Serving (number_odd_or_even) route on AirBnB_clone_v3
    location ~ /airbnb-dynamic/number_odd_or_even/(\d+)$ {
        proxy_pass http://127.0.0.1:5001/number_odd_or_even/$1;
    }

    # Serving API on AirBnB_clone_v3
    location /api {
        proxy_pass http://127.0.0.1:5002/api;
    }

    # The 404 error page
    error_page 404 /404.html;
    location /404 {
        root /var/www/html;
        internal;
    }
}
